<h2>Сканирование документов в Naumen</h2>

<form method="post">
    <p>
        <label for="scanner">Выберите сканер:</label>
        <select name="scanner">
            @foreach (string scanner in ViewBag.Scanner)
            {
                <option>@scanner</option>
            }
        </select>

    </p>

    @if (ViewBag.Scanner.Count == 0)
    {
        <p>
            <label for="format">Формат сканирования:</label>
            <select name="format">
                <option>png</option>
                <option>jpeg</option>
            </select>

            <br/>
            <br/>

            <label>Двухстороннее сканирование:</label>
            @if (ViewBag.isDuplex)
            {
                <input type="checkbox" name="isDuplex" value="true" checked/>
            }
            else
            {
                <input type="checkbox" name="isDuplex" value="true"/>
            }

            <label>Автоподача:</label>
            @if (ViewBag.isFeeder)
            {
                <input type="checkbox" name="isFeeder" value="true" checked/>
            }
            else
            {
                <input type="checkbox" name="isFeeder" value="true"/>
            }
            <br/>
            @* <label>Auto:</label> *@
            @* @if (ViewBag.isAuto) *@
            @* { *@
            @*     <input type="checkbox" name="isAuto" value="true" checked/> *@
            @*     <br/> *@
            @*     <br/> *@
            @* } *@
            @* else *@
            @* { *@
            @*     <input type="checkbox" name="isAuto" value="true"/> *@
            @*     <br/> *@
            @*     <br/> *@
            @* } *@

            @* @if (ViewBag.FromQuery != null) *@
            @* { *@
            @*     <input type="hidden" id="IsValid" name="IsValid" value=@ViewBag.FromQuery.IsValid> *@
            @*     <input type="hidden" id="Rest" name="Rest" value=@ViewBag.FromQuery.Rest> *@
            @*     <input type="hidden" id="AccessKey" name="AccessKey" value=@ViewBag.FromQuery.AccessKey> *@
            @*     <input type="hidden" id="Uuid" name="Uuid" value=@ViewBag.FromQuery.Uuid> *@
            @*     <input type="hidden" id="Url" name="Url" value=@ViewBag.FromQuery.Url> *@
            @*     <input type="hidden" id="Attr" name="Attr" value=@ViewBag.FromQuery.Attr> *@
            @* } *@

            <input type="submit" value="Сканировать"/>

        </p>
    }
    else
    {
        <h3>Устройства для сканирования не найдены.</h3>
    }
</form>